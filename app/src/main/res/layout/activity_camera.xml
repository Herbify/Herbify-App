<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.CameraActivity">


    <androidx.camera.view.PreviewView
        android:id="@+id/previewView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/shutter"
        android:contentDescription="@string/shutter"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:padding="10dp"
        android:background="@drawable/bg_rounded_80_stroke"
        android:layout_marginBottom="30dp"
        android:src="@drawable/ic_baseline_camera_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <include
        android:id="@+id/top_app_bar"
        layout="@layout/custom_app_bar_solid" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semi_bold"
        android:text="@string/scan_herbal"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/top_app_bar"
        app:layout_constraintEnd_toEndOf="@+id/top_app_bar"
        app:layout_constraintStart_toStartOf="@+id/top_app_bar"
        app:layout_constraintTop_toTopOf="@id/top_app_bar" />

    <ImageView
        android:id="@+id/btn_back"
        android:contentDescription="@string/arrow_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="25dp"
        android:src="@drawable/ic_baseline_arrow_back_white_24"
        app:layout_constraintBottom_toBottomOf="@+id/top_app_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/top_app_bar" />



</androidx.constraintlayout.widget.ConstraintLayout>